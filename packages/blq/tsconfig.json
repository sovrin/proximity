{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "lib": [
      "ES6"
    ],
    "paths": {
      "~*": [
        "*"
      ]
    }
  }
}