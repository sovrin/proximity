{
  "name": "proximity",
  "private": true,
  "scripts": {
    "frontend:dev": "lerna run --stream --no-prefix --scope @sovrin/proximity-frontend dev",
    "frontend:build": "lerna run --stream --no-prefix --scope @sovrin/proximity-frontend build",
    "backend:dev": "lerna run --stream --no-prefix --scope @sovrin/proximity-backend dev",
    "backend:build": "lerna run --stream --no-prefix --scope @sovrin/proximity-backend build",
    "server:build": "lerna run --stream --no-prefix --scope @sovrin/proximity-server build",
    "adapter:build": "lerna run --stream --no-prefix --scope @sovrin/proximity-adapter build",
    "adapter:dev": "lerna run --stream --no-prefix --scope @sovrin/proximity-adapter dev",
    "adapter:test": "lerna run --stream --no-prefix --scope @sovrin/proximity-adapter test",
    "bootstrap": "lerna bootstrap --hoist",
    "clean": "lerna clean --yes",
    "update": "npx lernaupdate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "lerna": "^4.0.0",
    "lerna-update-wizard": "^0.17.8",
    "mocha": "^8.3.2",
    "next-transpile-modules": "^6.3.0",
    "nyc": "^15.1.0",
    "typescript": "^4.2.3"
  }
}
