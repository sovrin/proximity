{
  "compilerOptions": {
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@sovrin/proximity-adapter": ["./packages/adapter/src"],
      "@sovrin/proximity-adapter/*": ["./packages/adapter/src/*"],
      "@sovrin/proximity-backend": ["./packages/backend/src"],
      "@sovrin/proximity-backend/*": ["./packages/backend/src/*"],
      "@sovrin/proximity-common": ["./packages/common/src"],
      "@sovrin/proximity-common/*": ["./packages/common/src/*"],
      "@sovrin/proximity-frontend": ["./packages/frontend"],
      "@sovrin/proximity-frontend/*": ["./packages/frontend/*"],
      "@sovrin/proximity-server": ["./packages/server"],
      "@sovrin/proximity-server/*": ["./packages/server/*"]
    },
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "**/dist/"
  ]
}
